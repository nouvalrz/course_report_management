<div class="d-flex justify-content-between align-items-center">
  <h2>Report Criterium Management</h2>
  <%= link_to new_admin_report_criterium_path, class: "btn btn-success" do %>
    <%= tag.i class: 'fa-solid fa-plus' %>
    Add Criterium
  <% end %>
</div>
<% if flash[:success].present? %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>
<% if flash[:error].present? %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>
<div class="row mt-3">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <div>
          <h5>Criterium List</h5>
        </div>
        <div class="d-flex justify-content-between align-items-center flex-wrap">
          <%= form_tag admin_report_criteria_path, method: 'get' do %>
            <div class="input-group input-group-sm" style="width: 300px;">
              <%= text_field_tag :query, params[:query], placeholder: "Search course title", class: "form-control float-right" %>
              <div class="input-group-append">
                <%= button_tag class: "btn btn-info" do %>
                  <i class="fas fa-search"></i>
                <% end %>
              </div>
            </div>
          <% end %>
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>

      <div class="card-body">
        <table class="table table-bordered table-hover">
          <thead>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Active</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
          <% @report_criteria.each_with_index do |criterium, index| %>
            <tr data-widget="expandable-table" aria-expanded="false">
              <td><%= @pagy.offset + index + 1 %></td>
              <td style="width: 80%"><%= criterium.title %></td>
              <td >
                <% if criterium.is_active %>
                  <span class="badge badge-success">Active</span>
                <% else %>
                  <span class="badge badge-danger">Inactive</span>
                <% end %>

              </td>
              <td style="width: 100%">
                <%= link_to edit_admin_report_criterium_path(criterium), class: "btn btn-primary" do %>
                  <%= tag.i class: 'fa-solid fa-circle-info' %>
                  Detail
                <% end %>
              </td>
            </tr>
            <!--            <tr class="expandable-body d-none">-->
            <!--              <td colspan="4">-->
            <!--                <div style="padding-top: 12px; margin-top: 0px; padding-bottom: 12px; margin-bottom: 16px; display: none; padding-left: 16px;">-->
            <%# if teacher.master_classes.present? %>
            <!--                    <h6>Class List</h6>-->
            <%# else %>
            <!--                    <h6>Has no class</h6>-->
            <%# end %>
            <!--                  <ul>-->
            <%# teacher.master_classes.each do |master_class| %>
            <!--                      <li><%#= master_class.name %></li>-->
            <%# end %>
            <!--                  </ul>-->
            <!--                </div>-->
            <!--              </td>-->
            <!--            </tr>-->
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer clearfix">
        <!--        <ul class="pagination pagination-sm m-0 float-right">-->
        <!--          <li class="page-item"><a class="page-link" href="#">«</a></li>-->
        <!--          <li class="page-item"><a class="page-link" href="#">1</a></li>-->
        <!--          <li class="page-item"><a class="page-link" href="#">2</a></li>-->
        <!--          <li class="page-item"><a class="page-link" href="#">3</a></li>-->
        <!--          <li class="page-item"><a class="page-link" href="#">»</a></li>-->
        <!--        </ul>-->
      </div>
    </div>
  </div>
</div>