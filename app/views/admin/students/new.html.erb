<% if flash[:error].present? %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>
<h2>Add New Student</h2>
<div class="row mt-4">
  <div class="col-12 col-lg-8 col-md-12">
    <div class="card card-success">
      <div class="card-header">
        <h3 class="card-title">Student's Form</h3>
      </div>
      <%= form_with model: @student, url: admin_students_path, html: { autocomplete: "new-password" } do |f| %>
        <div class="card-body">
          <div class="form-group">
            <%= f.label :full_name, "Full Name" %>
            <%= f.text_field :full_name, class: "form-control", placeholder: "Full Name"  %>
          </div>
          <div class="form-group">
            <%= f.label :date_of_birth, "Date of Birth" %>
            <%= f.date_field :date_of_birth, class: "form-control"  %>
          </div>
          <div class="form-group">
            <%= f.label :master_class_id, "Class Assignment (Optional)" %>
            <%= f.select :master_class_id, options_for_select(@master_classes.map { |master_class| [master_class.name, master_class.id] }), {}, { class: "form-control select-teacher", multiple:"multiple" }  %>
          </div>


          <%#= f.fields_for :user, User.new do |user_form| %>
            <%#= user_form.hidden_field :role, value: User::ROLES[:teacher] %>
<!--            <div class="form-group">-->
              <%#= user_form.label :username, "Username" %>
              <%#= user_form.text_field :username, class: "form-control", placeholder: "Username" %>
<!--            </div>-->
<!--            <div class="form-group">-->
              <%#= user_form.label :password, "Password" %>
              <%#= user_form.password_field :password, class: "form-control", placeholder: "Password"  %>
<!--            </div>-->
<!--            <div class="form-group">-->
              <%#= user_form.label :password_confirmation, "Password Confirmation" %>
              <%#= user_form.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation"  %>
<!--            </div>-->
          <%# end %>

        </div>
        <div class="card-footer">
          <%= f.submit 'Add', class:"btn btn-success btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>

    $(document).ready(function() {
        $('.select-teacher').select2({
            theme: 'bootstrap4',
            multiple: true,
        });
        $('.mantap').select2({
            theme: 'bootstrap4'
        });
    });
</script>