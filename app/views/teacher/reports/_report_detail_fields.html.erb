<div class="nested-fields form-group report-detail">
  <div class="row align-items-start">
    <div class="col-3">
      <%= f.label :report_criterium_id, "Select Criterium" %>
      <%= f.collection_select :report_criterium_id, ReportCriterium.all, :id, :title, { include_blank: true }, class: "select-criterium" %>
    </div>
    <div class="col-6">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, class: "form-control", rows: 1  %>
    </div>
    <div class="col-2">
      <%= f.label :score, "Score" %>
      <%= f.number_field :score, class: "form-control report-detail-score", min: "1", max: "100", value: 0  %>
    </div>
    <div class="col-1">
      <%= f.hidden_field :_destroy %>
      <%= f.label :action, "Action" %>
      <%= link_to '#', class: 'remove_fields btn btn-danger' do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>